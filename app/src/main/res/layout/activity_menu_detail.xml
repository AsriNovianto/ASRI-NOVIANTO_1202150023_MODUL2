<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="40dp"
    android:paddingRight="40dp"
    tools:context="com.example.asrinovianto_1202150023_modul2.MenuDetail">

    <ImageView
        android:id="@+id/DetailGambar"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        app:srcCompat="@drawable/sop_dada"
        android:textAlignment="center"
        />

    <TextView
        android:id="@+id/DetailNama"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sop Dada"
        android:textSize="24dp"
        android:textStyle="bold"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/DetailHarga"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Rp. 14000"
        android:textSize="22dp"
        android:textStyle="normal"
        android:textAlignment="center" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Deskripsi"
        android:textSize="18dp"
        android:layout_marginTop="25dp"
        android:paddingLeft="20dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/DetailDeskripsi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Daging Dada yang dipotong"
        android:textSize="16dp"
        android:textStyle="normal"
        android:paddingLeft="20dp"
        android:paddingRight="20dp" />
</LinearLayout>

